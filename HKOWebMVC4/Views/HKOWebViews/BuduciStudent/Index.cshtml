@model IEnumerable<HKOWebMVC4.ZanimanjeStudiji_Result>

@{
    ViewBag.Title = "Index";
}

<h2>Zanimanja Studiji</h2>

<table id="zanimanjaStudijiTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Zanimanje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studij)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studijski_program)
            </th>
            <th>Pregled:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Zanimanje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Studij)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Studijski_program)                    
                </td>
                <td style="width:100px">
                    <div class="dropdown btn-group btn-group-sm">
                        <button type="button" class="btn btn-disabled">Opcije:</button>
                        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Radna Mjesta", "RadnaMjesta", new { controller = "BuduciStudent", Id = item.ZanimanjeID })
                            <li>@Html.ActionLink("Ključni poslovi", "KljucniPoslovi", new { controller = "BuduciStudent", Id = item.ZanimanjeID })
                            <li>@Html.ActionLink("Kompetencije", "Kompetencije", new { controller = "BuduciStudent", Id = item.ZanimanjeID })
                            <li>@Html.ActionLink("Kolegiji", "Kolegiji", new { controller = "BuduciStudent", Id = item.ZanimanjeID })
                            <li>@Html.ActionLink("Ishodi Učenja", "IshodiUcenja", new { controller = "BuduciStudent", Id = item.ZanimanjeID })
                            <li role="separator" class="divider"></li>
                            <li><a asp-action="" asp-route-id="">Showcase</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>